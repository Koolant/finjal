{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <fieldset>
                            <div class="form-group">
                                <input id="username" required="required" class="form-control" placeholder="{{ 'security.login.username'|trans }}" name="_username" type="text" value="{{ last_username }}" autofocus>
                            </div>
                            <div class="form-group">
                                <input id="password" required="required" class="form-control" placeholder="{{ 'security.login.password'|trans }}" name="_password" type="password" value="">
                            </div>
                            <div class="checkbox">
                                <label for="remember_me">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans }}
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-lg btn-success btn-block">Login</button>
                        </fieldset>
                        <div class="form-group">
                            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-lg btn-block btn-info" role="button" style="margin-top: 20px">Register</a>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>
</div>
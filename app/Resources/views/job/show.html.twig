{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div row>
        <div class="col-xs-12">
    <table class="table">
        <h1>Job</h1>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ job.name }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if job.startDate %}{{ job.startDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li class="list-inline-item">
            <form action="{{ path('job_index') }}">
                <button type="submit" class="btn btn-default">Back</button>
            </form>
        </li>
        <li class="list-inline-item">
            <form action="{{ path('job_edit', { 'id': job.id }) }}">
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </li>
        <li class="list-inline-item">
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger">Delete</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
        </div>
    </div>
</div>
{% endblock %}

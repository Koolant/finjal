{% extends 'base.html.twig' %}
{% block body %}
{% include 'nav.html.twig' %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Requests</h1>
            </div>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Job</th>
                <th>Requester</th>
                <th>Datetime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for materialRequest in materialRequests %}
            <tr>
                <td><a href="{{ path('materialrequest_show', { 'id': materialRequest.id }) }}">{{ materialRequest.id }}</a></td>
                <td>{{ materialRequest.job }}</td>
                <td>{{ materialRequest.requester }}</td>
                <td>{% if materialRequest.dateTime %}{{ materialRequest.dateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a href="{{ path('materialrequest_show', { 'id': materialRequest.id }) }}">show</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="{{ path('materialrequest_edit', { 'id': materialRequest.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <ul class="list-inline">
                <li class="lsit-inline-item">
                    <form action="{{ path('materialrequest_new') }}">
                        <button type="submit" class="btn btn-primary">New Request</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
